@model IEnumerable<BusinessLayer.Users>

@{
    ViewBag.Title = "Index";
}

<h2>Perdoruesit</h2>

<p>
    @Html.ActionLink("Perdorues i Ri", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.emri)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mbiemri)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.password)
        </th>*@
    
        <th>
            @Html.DisplayNameFor(model => model.perdoruesi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    using (Html.BeginForm("Fshi", "Perdoruesi", new { id = item.Id }))
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.emri)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mbiemri)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.password)
        </td>*@
       
        <td>
            @Html.DisplayFor(modelItem => item.perdoruesi)
        </td>
        <td>
            @Html.ActionLink("Modifiko", "Edit", new { id = item.Id }) 
            @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@          
            <input type="submit" value="Fshi" class="btn btn-default btn-danger" onclick="return confirm('Jeni te sigurte qe doni te fshini perdoruesin @item.perdoruesi ?');" />
        </td>
    </tr>
    }
}

</table>
<style type="text/css">
    .table > tbody > tr:hover {
        background-color: #f5f5f5;
    }
</style>
